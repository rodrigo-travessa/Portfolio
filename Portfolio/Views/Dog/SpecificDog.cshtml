@model List<DogModel>

   @{
    DogModel Dog = Model.First();
}
<div style="width:100%">
    <div style="width:60%; float:left">
        <table class="table table-striped-border mt-5">


            <thead class="thead-dark">
                <tr>
                    <th scope="col">Field</th>
                    <th scope="col">Value</th>
                </tr>
            </thead>
            <tr>
                <td>
                    Breed Name
                </td>
                <td>
                    @Dog.Name
                </td>
            </tr>
            <tr>
                <td>
                    Breed Origin
                </td>
                <td>
                    @Dog.Origin
                </td>
            </tr>
            <tr>
                <td>
                    ID
                </td>
                <td>
                    @Dog.Id
                </td>
            </tr>

            <tr>
                <td>
                    Life Span
                </td>
                <td>
                    @Dog.LifeSpan
                </td>
            </tr>
            <tr>
                <td>
                    Temperament
                </td>
                <td>
                    @Dog.Temperament
                </td>
            </tr>
            <tr>
                <td>
                    Weight Imperial/Metric
                </td>
                <td>
                    Imperial @Dog.Weight.Imperial lbs  /  Metric @Dog.Weight.Metric KGs
                </td>
            </tr>
            <tr>
                <td>
                    Height Imperial/Metric
                </td>
                <td>
                    @Dog.Height.Imperial Inches / @Dog.Height.Metric cm
                </td>
            </tr>


        </table>
    </div>
    <div style="width:35%; float:right; border:solid #fff; border-radius:15px" class="mt-5">
        <img style="width:100%;height:100%;object-fit:cover;border-radius:10px" src="@Dog.ImageURL" alt="Sorry, No image to Display" />
    </div>
</div>
