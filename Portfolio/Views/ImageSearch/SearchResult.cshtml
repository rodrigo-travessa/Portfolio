@model List<Result>

<div class="text-center mt-5">

    <form method="post" class="d-flex">

        <input class="form-control" type="text" asp-controller="ImageSearch" asp-action="ImageSearchResults" id="searchTerm" name="searchTerm" placeholder="What do you want to see?" />
        <button class="btn btn-secondary ms-2" type="submit" asp-controller="ImageSearch" asp-action="ImageSearchResults"> Search </button>

    </form>


    <div class="mt-4">
        <span> This Formating is Intentional, to Show the full picture without cropping or stretching.</span>

        <div class="SearchImages-Wrapper mt-3">
            @{
                @foreach (var Image in @Model)
                {
                    <div style="margin:1em;">
                    <a asp-controller="ImageSearch" asp-action="SpecificImageSearch" asp-route-full="@Image.urls.full" asp-route-download="@Image.links.download" >
                        <img style="border-radius:5%;" src="@Image.urls.thumb"/>
                    </a>
                        <div style="align-self:end"><a>Photographer: @Image.user.name <br> Likes ( @Image.likes ) <br> On Unsplash.com</a></div>
                    </div>
                }

            }
        </div>
    </div>

